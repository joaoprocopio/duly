{
  "extends": "./lib/jsconfig/jsconfig.dom.json",
  "include": [
    "./lib/declarations/vite-env.d.ts",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./lib/**/*.js",
    "./lib/**/*.jsx",
  ],
  "exclude": [
    "./src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/*": [
        "./src/*"
      ]
    }
  }
}