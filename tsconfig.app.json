{
  "extends": "./lib/tsconfig/tsconfig.base.json",
  "include": [
    "./lib/declarations/vite-env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./config/**/*.ts",
    "./config/**/*.tsx"
  ],
  "exclude": [
    "./src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/*": [
        "./src/*"
      ]
    }
  }
}